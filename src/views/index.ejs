<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" type="text/css" href="/reset.css">
    <link rel="stylesheet" type="text/css" href="/style.css">
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="user-cards">
                <% if (users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <div class="user-card">
                            <h3 class="user-name">
                                <%= user.firstName %> <%= user.lastName %>
                            </h3>
                            <p class="user-email">
                                <%= user.email %>
                            </p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>
                        Não há usuários
                    </p>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>